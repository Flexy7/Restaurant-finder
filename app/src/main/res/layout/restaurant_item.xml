<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_shape"
    >


    <TextView
        android:id="@+id/activity_restaurant_infoViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/activity_restaurant_infoViewAddress"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/activity_restaurant_infoViewName"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_infoViewName" />


    <TextView
        android:id="@+id/activity_restaurant_infoViewRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/line_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_infoViewAddress" />

    <TextView
        android:id="@+id/activity_restaurant_infoViewKitchenTypeString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kitchen_type"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/activity_restaurant_infoViewCostString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"

        android:text="@string/avg_cost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_infoViewKitchenTypeString" />

    <TextView
        android:id="@+id/activity_restaurant_infoViewKitchenType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@+id/activity_restaurant_infoViewKitchenTypeString"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/activity_restaurant_infoViewAvgCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@+id/activity_restaurant_infoViewKitchenType"
        app:layout_constraintTop_toBottomOf="@+id/activity_restaurant_infoViewKitchenType" />


</android.support.constraint.ConstraintLayout>
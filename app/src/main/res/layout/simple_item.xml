<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/simple_itemViewDish"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="23dp"
        android:textColor="@color/colorBlack"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/simple_itemViewCost"
        app:layout_constraintEnd_toStartOf="@+id/simple_itemViewCost"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/simple_itemViewCost"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simple_itemViewDish"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>